Subject: [PATCH] borders

---
 dwm.c | 25 +++++++++++++++++++------
 1 file changed, 19 insertions(+), 6 deletions(-)

diff --git a/dwm.c b/dwm.c
index 4465af1..66af0b0 100644
--- a/dwm.c
+++ b/dwm.c
@@ -783,6 +783,8 @@ expose(XEvent *e)
 void
 focus(Client *c)
 {
+        XWindowChanges wc;
+	
 	if (!c || !ISVISIBLE(c))
 		for (c = selmon->stack; c && !ISVISIBLE(c); c = c->snext);
 	if (selmon->sel && selmon->sel != c)
@@ -796,6 +798,12 @@ focus(Client *c)
 		attachstack(c);
 		grabbuttons(c, 1);
 		XSetWindowBorder(dpy, c->win, scheme[SchemeSel][ColBorder].pixel);
+                if(!c->isfloating){
+                        wc.sibling = selmon->barwin;
+                        wc.stack_mode = Below;
+                        XConfigureWindow(dpy, c->win, CWSibling | CWStackMode, &wc);
+                }
+
 		setfocus(c);
 	} else {
 		XSetInputFocus(dpy, root, RevertToPointerRoot, CurrentTime);
@@ -1687,12 +1695,17 @@ tile(Monitor *m)
 	for (i = my = ty = 0, c = nexttiled(m->clients); c; c = nexttiled(c->next), i++)
 		if (i < m->nmaster) {
 			h = (m->wh - my) / (MIN(n, m->nmaster) - i);
-			resize(c, m->wx, m->wy + my, mw - (2*c->bw), h - (2*c->bw), 0);
-			my += HEIGHT(c);
+			if (n == 1)
+                        	resize(c, m->wx, m->wy, m->ww - (2*c->bw), h - (2*c->bw), False);
+                        else
+                        	resize(c, m->wx, m->wy + my, mw - c->bw, h - (2*c->bw), False);
+                        my += HEIGHT(c) - c->bw;
+
 		} else {
 			h = (m->wh - ty) / (n - i);
-			resize(c, m->wx + mw, m->wy + ty, m->ww - mw - (2*c->bw), h - (2*c->bw), 0);
-			ty += HEIGHT(c);
+                        resize(c, m->wx + mw, m->wy + ty, m->ww - mw - (2*c->bw), h - (2*c->bw), False);
+                        ty += HEIGHT(c) - c->bw;
+
 		}
 }
 
